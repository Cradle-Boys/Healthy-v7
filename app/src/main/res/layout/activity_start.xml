<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout"
    tools:context=".authentication.StartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="228dp">

    <ImageView
        android:id="@+id/healthy_2_1"
        android:layout_width="207dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="99dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/healthy_2_1" />

        <EditText
            android:id="@+id/emailLoginEditText"
            android:layout_width="181dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            android:background="@drawable/rectangle_1"
            android:hint="Email"
            android:textAlignment="center"
            android:textAppearance="@style/username_em"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordLoginEditText"
            android:layout_width="181dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="297dp"
            android:background="@drawable/rectangle_1"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textAppearance="@style/username_em"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="354dp"
            android:layout_marginBottom="169dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goRegisterButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:background="@drawable/button_bg"
                android:elevation="5dp"
                android:text="Register"
                android:textAppearance="@style/label"
                android:textSize="12sp" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:background="@drawable/button_bg"
                android:elevation="5dp"
                android:text="Login"
                android:textAppearance="@style/label"
                android:textSize="12sp" />

        </LinearLayout>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleRegisterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="423dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/circleProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/googleRegisterButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>